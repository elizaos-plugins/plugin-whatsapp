{
    "name": "@elizaos/plugin-whatsapp",
    "version": "0.25.6-alpha.1",
    "description": "WhatsApp plugin supporting Cloud API and Baileys (QR code)",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "@elizaos/source": "./src/index.ts",
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup --format esm --dts",
        "dev": "tsup --format esm --dts --watch",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "lint": "biome check src/",
        "lint:fix": "biome check --apply src/",
        "format": "biome format src/",
        "format:fix": "biome format --write src/"
    },
    "dependencies": {
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "axios": "1.7.8",
        "pino": "^9.5.0",
        "qrcode": "^1.5.3",
        "qrcode-terminal": "^0.12.0"
    },
    "peerDependencies": {
        "@elizaos/core": "*"
    },
    "devDependencies": {
        "@biomejs/biome": "1.5.3",
        "@elizaos/core": "latest",
        "@types/node": "20.17.9",
        "@typescript-eslint/eslint-plugin": "8.16.0",
        "@typescript-eslint/parser": "8.16.0",
        "tsup": "^8.0.0",
        "typescript": "5.6.3",
        "vitest": "^3.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "agentConfig": {
        "pluginType": "elizaos:client:1.0.0",
        "pluginParameters": {
            "WHATSAPP_ACCESS_TOKEN": {
                "type": "string",
                "minLength": 1,
                "description": "WhatsApp Cloud API access token (required for Cloud API, not needed for Baileys)",
                "optional": true
            },
            "WHATSAPP_PHONE_NUMBER_ID": {
                "type": "string",
                "minLength": 1,
                "description": "WhatsApp business phone number ID (required for Cloud API, not needed for Baileys)",
                "optional": true
            },
            "WHATSAPP_WEBHOOK_TOKEN": {
                "type": "string",
                "minLength": 1,
                "description": "Webhook verification token",
                "optional": true
            },
            "WHATSAPP_BUSINESS_ID": {
                "type": "string",
                "minLength": 1,
                "description": "Business account ID",
                "optional": true
            },
            "WHATSAPP_AUTH_DIR": {
                "type": "string",
                "description": "Directory for Baileys session storage (QR code auth)",
                "optional": true
            },
            "WHATSAPP_PRINT_QR": {
                "type": "boolean",
                "description": "Print QR code in terminal (default: true)",
                "optional": true
            }
        }
    }
}
