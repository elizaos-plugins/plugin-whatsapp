{
  "name": "@elizaos/plugin-whatsapp",
  "description": "WhatsApp plugin for ElizaOS (Cloud API + Baileys QR auth)",
  "version": "2.0.0-alpha.6",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "keywords": [
    "plugin",
    "elizaos",
    "whatsapp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "axios": "1.7.8",
    "pino": "^9.6.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0"
  },
  "peerDependencies": {
    "@elizaos/core": "2.0.0-alpha.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "bun --hot build.ts",
    "test": "vitest run || echo 'TypeScript tests skipped - no tests found'",
    "lint": "bunx @biomejs/biome check --write --unsafe .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "lint:check": "bunx @biomejs/biome check .",
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format ."
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginParameters": {
      "WHATSAPP_ACCESS_TOKEN": {
        "type": "string",
        "description": "Access token for WhatsApp Cloud API (required for cloudapi auth)",
        "required": false,
        "sensitive": true
      },
      "WHATSAPP_PHONE_NUMBER_ID": {
        "type": "string",
        "description": "Phone number ID for WhatsApp Cloud API (required for cloudapi auth)",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_AUTH_METHOD": {
        "type": "string",
        "description": "Authentication method: cloudapi or baileys",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_AUTH_DIR": {
        "type": "string",
        "description": "Directory used to persist Baileys session files (required for baileys auth)",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_PRINT_QR": {
        "type": "boolean",
        "description": "Print QR code in terminal when using Baileys auth",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_WEBHOOK_VERIFY_TOKEN": {
        "type": "string",
        "description": "Webhook verification token",
        "required": false,
        "sensitive": true
      },
      "WHATSAPP_BUSINESS_ACCOUNT_ID": {
        "type": "string",
        "description": "Business account ID",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_API_VERSION": {
        "type": "string",
        "description": "API version string",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_DM_POLICY": {
        "type": "string",
        "description": "DM policy (e.g. allow, deny, allowlist)",
        "required": false,
        "sensitive": false
      },
      "WHATSAPP_GROUP_POLICY": {
        "type": "string",
        "description": "Group message policy",
        "required": false,
        "sensitive": false
      }
    }
  }
}
